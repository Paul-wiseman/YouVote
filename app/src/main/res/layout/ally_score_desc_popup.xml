<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/cardViews"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="674dp"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/linearLayout"
            app:layout_constraintBottom_toBottomOf="@+id/ratingtxt2"
            app:layout_constraintTop_toBottomOf="@+id/ratingtxt2">


        <ImageView
                android:id="@+id/closewindow1"
                app:layout_constraintTop_toTopOf="@id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/titleTextWhat"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_marginLeft="76dp"
                android:layout_marginTop="20dp" />

        <TextView
                android:id="@+id/titleTextWhat"
                android:paddingTop="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="@id/linearLayout"
                android:text="WHAT IS AN ALLY SCORE?"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="47dp"
                tools:layout_conversion_absoluteWidth="207dp"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.03" />

        <TextView
                android:id="@+id/titleWhatDesc"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/titleTextWhat"
                android:layout_height="wrap_content"
                android:text="@string/descOfWhat"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintHorizontal_bias="0.0" />

        <TextView
                android:id="@+id/badScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:paddingTop="@dimen/margin_20"
                android:text="BAD"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleWhatDesc"
                android:layout_marginTop="20dp"
                app:layout_constraintHorizontal_bias="0.0" />

        <TextView
                android:id="@+id/neutralScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Neutral"
                android:paddingTop="@dimen/margin_20"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/badScoreText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleWhatDesc"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.365" />

        <TextView
                android:id="@+id/goodScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:paddingTop="@dimen/margin_20"
                android:text="Good"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/neutralScoreText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleWhatDesc"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.7" />

        <TextView
                android:id="@+id/badScore"
                android:layout_width="62dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/badScoreText"
                android:textSize="20sp"
                android:text="35%"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_view"
                android:backgroundTint="#923D31"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.0" />

        <TextView
                android:id="@+id/neutralScore"
                android:layout_width="62dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/neutralScoreText"
                android:textSize="20sp"
                android:text="60%"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_view"
                android:backgroundTint="#AB8A13"
                app:layout_constraintLeft_toLeftOf="@id/badScore"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="48dp"
                app:layout_constraintHorizontal_bias="0.357" />

        <TextView
                android:id="@+id/goodScore"
                android:layout_width="71dp"
                android:layout_height="46dp"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/goodScoreText"
                android:textSize="20sp"
                android:text="95%"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_view"
                android:backgroundTint="#0F7C34"
                app:layout_constraintLeft_toLeftOf="@id/neutralScore"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.729" />

        <TextView
                android:id="@+id/badAllyScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Ally Score"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/badScore"
                android:layout_marginTop="24dp"
                app:layout_constraintHorizontal_bias="0.0" />


        <TextView
                android:id="@+id/neutralAllyScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Ally Score"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/badAllyScoreText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/neutralScore"
                android:layout_marginTop="56dp"
                app:layout_constraintHorizontal_bias="0.368" />

        <TextView
                android:id="@+id/goodAllyScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:text="Ally Score"
                android:textColor="@color/black"
                app:layout_constraintLeft_toLeftOf="@id/neutralAllyScoreText"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/goodScore"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.767" />

        <TextView
                android:id="@+id/titleTextDet"
                android:paddingTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/badAllyScoreText"
                android:text="DETERMINING ALLY SCORE"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="47dp"
                tools:layout_conversion_absoluteWidth="207dp"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.03" />

        <TextView
                android:id="@+id/titleDetDesc"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/titleTextDet"
                android:layout_height="wrap_content"
                android:text="@string/det_text"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintHorizontal_bias="0.0" />

        <Button
                android:id="@+id/btnCloseAlyScoreDesc"
                android:backgroundTint="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/titleDetDesc"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingTop="@dimen/margin_20"
                app:layout_constraintRight_toRightOf="parent"
                android:text="DONE"
                android:layout_marginTop="28dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>