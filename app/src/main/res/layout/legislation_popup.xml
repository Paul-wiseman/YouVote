<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraint">

    <TextView
            android:id="@+id/titleTextLeg"
            android:paddingTop="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="S. 2638"
            app:layout_constraintTop_toTopOf="@id/constraint"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_conversion_absoluteHeight="47dp"
            tools:layout_conversion_absoluteWidth="207dp"
            android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.471" />

    <ImageView
            android:id="@+id/close3"
            android:layout_width="49dp"
            android:layout_height="46dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraint"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.918" />

    <TextView
            android:id="@+id/legislation3"
            app:layout_constraintTop_toBottomOf="@id/titleTextLeg"
            android:layout_width="351dp"
            android:layout_height="31dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/leg_3_hit"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginTop="12dp" />

    <TextView
            android:id="@+id/legislation3Desc"
            app:layout_constraintTop_toBottomOf="@id/legislation3"
            android:layout_width="342dp"
            android:layout_height="138dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:text="@string/leg_3_desc_txt"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginTop="12dp" />

    <TextView
            android:id="@+id/hyperLink"
            app:layout_constraintTop_toBottomOf="@id/legislation3Desc"
            android:layout_width="349dp"
            android:layout_height="54dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/hyperlink"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginTop="12dp" />

    <TextView
            android:id="@+id/kamalsVote"
            app:layout_constraintTop_toBottomOf="@id/hyperLink"
            android:layout_width="349dp"
            android:layout_height="54dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:text="@string/kamala_vote"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginTop="12dp" />

    <Button
            android:id="@+id/btnsubmitagree2"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_width="110dp"
            android:layout_height="46dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kamalsVote"
            android:layout_marginTop="36dp"
            android:text="AGREE"
            app:layout_constraintHorizontal_bias="0.194" />

    <Button
            android:id="@+id/btnsubmitagree3"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISAGREE"
            app:layout_constraintTop_toBottomOf="@id/kamalsVote"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btnsubmitagree2"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp" />

    <TextView
            android:id="@+id/status2"
            app:layout_constraintTop_toBottomOf="@id/btnsubmitagree3"
            android:layout_width="353dp"
            android:layout_height="28dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/response"
            tools:layout_editor_absoluteX="16dp"
            android:gravity="center"
            android:layout_marginTop="12dp" />


</androidx.constraintlayout.widget.ConstraintLayout>