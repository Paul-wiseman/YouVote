<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/logo2"
            android:layout_width="154dp"
            android:layout_height="150dp"
            android:src="@drawable/logo2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.106" />

    <ImageView
            android:id="@+id/official_activity_Button_close2"
            android:layout_width="49dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="30dp" />

    <TextView
            android:id="@+id/titleText1"
            android:layout_width="273dp"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginVertical="20dp"
            android:text="RATING SUCCESSFUL"
            android:gravity="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/logo2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@+id/logo2"
            app:layout_constraintEnd_toEndOf="@+id/logo2" />

    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.5"
            android:clickable="false"
            android:id="@+id/ratingBar"
            android:isIndicator="true"
            app:layout_constraintStart_toStartOf="@+id/titleText1"
            app:layout_constraintEnd_toEndOf="@+id/titleText1"
            app:layout_constraintTop_toBottomOf="@+id/titleText1" />

    <TextView
            android:id="@+id/thanksRating"
            android:layout_width="334dp"
            android:layout_height="156dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/thanks_rating"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/ratingBar"
            app:layout_constraintStart_toStartOf="@+id/ratingBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="0.106" />

    <Button
            android:id="@+id/official_activity_cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLOSE"
            app:layout_constraintTop_toBottomOf="@id/thanksRating"
            android:textColor="@color/cardview_dark_background"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            tools:layout_conversion_absoluteWidth="88dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/thanksRating"
            app:layout_constraintStart_toStartOf="@+id/thanksRating"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.163" />

</androidx.constraintlayout.widget.ConstraintLayout>